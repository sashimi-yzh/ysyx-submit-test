config CALIB_AXI4
	bool "Calibration of Memory Access(AXI4)"
	default y

config CALIB_APB
    bool "Calibration of Memory Access(APB)"
    default y

config STAT
    bool "Enable Statistics"
    default y

config WAVEREC
	bool "Enable Wave Record"
	default y

config NVBOARD
	bool "Enable Nvboard"
	default y

config SDB
	bool "Enable SDB"
	default y

config PRINT_INST
	bool "Print instructions"
	default y
	depends on SDB
config MAX_NO_INST
	int "Max number of inst to print"
	range 5 50
	default 10
	depends on PRINT_INST

config ITRACE
	bool "Enable Itrace"
	default y
config MTRACE
	bool "Enable Mtrace"
	default y
config DTRACE
	bool "Enable Dtrace"
	default y
config FTRACE
	bool "Enable Ftrace"
	default y
config ETRACE
	bool "Enable Etrace"
	default y
	
config WP
	bool "Enable Watchpoint"
	default y

