menu "Memory Configuration"

choice
  prompt "instruction memory base"
  default IMEM_BASE
config IMEM_BASE
  bool "Memory 0x80000000"
config IMEM_MROM_BASE
  bool "Mrom 0x20000000"
config IMEM_FLASH_BASE
  bool "Flash 0x30000000"
endchoice

config MBASE
  hex "Memory base address"
  default 0x20000000 


config MSIZE
  hex "Memory size"
  default 0x00002000 
endmenu #MEMORY
